<% if current_user %>
  <div class="dropdown">
    <a class="btn dropdown-toggle btn-blue" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.username if current_user %>
      <%= image_tag(current_user.navbar_avatar, class: 'navbar-pfp') if current_user %>
    </a>
    <ul class="dropdown-menu bg-dark">
      <div>
        <div class="ml-2">
          <%= link_to "Edit Account", edit_user_registration_path, class: 'dropdown-item' %>
          <%= link_to "Private chat", user_path(current_user), class: 'dropdown-item' %>
          <p class="text-white navbar-role">
            <% user_role = current_user.role %>
            <b>Role:</b> <%= link_to "#{user_role}", user_path(current_user), class: "msg-role-#{user_role} role-link" %>
          </p>
        </div>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn rounded-0 w-100 logout-btn' %>
      </div>
    </ul>
  </div>
<% end %>
